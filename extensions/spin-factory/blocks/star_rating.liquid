      {
        if ( SpinBtnClickFlag )
        {
          validationCheck();
          const SpintBtn = document.querySelector( ".SpintBtn" );

          SpintBtn.style.transition = "transform 0.2s ease";
          SpintBtn.style.transform = "scale(0.95, 0.95)";

          setTimeout( () =>
          {
